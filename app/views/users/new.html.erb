<div class="container">
  <h1>Welcome</h1>

  <%= form_for :user, :url => users_url, :method => :post do |f| %>
    <div class="form-group row">
      <div class="col-form-label"><%= f.label :first_name %></div>
      <%= f.text_field :first_name %>
    </div>

    <div class="form-group row">
      <div class="col-form-label"><%= f.label :last_name %></div>
      <%= f.text_field :last_name %>
    </div>

    <div class="form-group row">
      <div class="col-form-label"><%= f.label :email_address %></div>
      <%= f.email_field :email_address %>
    </div>

    <div class="form-group row">
      <div class="col-form-label"><%= f.label :username %></div>
      <%= f.text_field :username %>
    </div>

    <div class="form-group row">
      <div class="col-form-label"><%= f.label :password %></div>
      <%= f.password_field :password %>
    </div>

    <div class="form-group row">
      <div class="col-form-label"><%= f.label :password_confirmation %></div>
      <%= f.password_field :password_confirmation %>
    </div>

    <%= f.submit "Sign Up" %>
  <% end %>
</div>
